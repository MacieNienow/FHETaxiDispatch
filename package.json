{
  "name": "private-ride-platform",
  "version": "1.0.0",
  "description": "Privacy-Focused Blockchain Ride Sharing Platform",
  "private": true,
  "scripts": {
    "dev": "next dev -p 1371",
    "build": "next build",
    "start": "next start -p 1371",
    "lint": "next lint",
    "lint:solidity": "solhint 'contracts/**/*.sol'",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:sepolia": "npx hardhat test --network sepolia",
    "test:coverage": "npx hardhat coverage",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "verify:sepolia": "npx hardhat run scripts/verify.js --network sepolia",
    "ci": "npm run lint:solidity && npm run compile && npm test && npm run type-check",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "@rainbow-me/rainbowkit": "^2.1.0",
    "wagmi": "^2.12.0",
    "viem": "^2.17.0",
    "@tanstack/react-query": "^5.51.0",
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.0",
    "@radix-ui/react-select": "^2.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.0",
    "@radix-ui/react-tooltip": "^1.1.0",
    "@radix-ui/react-alert-dialog": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.4.0",
    "lucide-react": "^0.400.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.5.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "esbuild": "^0.23.0",
    "solhint": "^5.0.3",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "husky": "^8.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
