# ============================================
# Private Taxi Dispatch - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# Deployment Configuration
# ============================================

# Private key for deployment (without 0x prefix)
# Get from MetaMask: Account Details > Export Private Key
PRIVATE_KEY=your_private_key_here

# Sepolia RPC URL
# Get from: https://infura.io/ or https://alchemy.com/
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR-PROJECT-ID
RPC_URL=https://rpc.sepolia.org
CHAIN_ID=11155111

# ============================================
# Contract Verification
# ============================================

# Etherscan API key for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key

# ============================================
# Pauser Configuration
# ============================================

# Address of the first pauser (defaults to deployer if not set)
PAUSER1_ADDRESS=0x0000000000000000000000000000000000000000

# Address of the second pauser (defaults to deployer if not set)
PAUSER2_ADDRESS=0x0000000000000000000000000000000000000000

# Legacy: Number of pausers (for compatibility)
NUM_PAUSERS=2

# ============================================
# Gas Reporting (Optional)
# ============================================

# Enable gas reporting in tests
REPORT_GAS=false

# CoinMarketCap API key for gas price calculations
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# ============================================
# Frontend Configuration
# ============================================

# Main contract address (will be updated after deployment)
TAXI_DISPATCH_CONTRACT=0xd3cc141c38dac488bc1875140e538f0facee7b26

# Gateway contract address (will be updated after deployment)
GATEWAY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# KMS Generation Contract Address (for FHE operations)
KMS_GENERATION_ADDRESS=0x0000000000000000000000000000000000000000

# ============================================
# Network Configuration (Optional)
# ============================================

# Mainnet RPC URL (if deploying to mainnet)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID

# Polygon RPC URL
POLYGON_RPC_URL=https://polygon-rpc.com

# Arbitrum RPC URL
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# ============================================
# Important Security Notes
# ============================================
#
# - NEVER commit your .env file to git
# - NEVER share your private key
# - Use a dedicated wallet for deployment
# - Keep your API keys secure
# - For production, use hardware wallets or secure key management
#
# ============================================
# Deprecated Variables (DO NOT USE)
# ============================================
# PAUSER_ADDRESS - use PAUSER1_ADDRESS and PAUSER2_ADDRESS instead
# KMS_MANAGEMENT_ADDRESS - use KMS_GENERATION_ADDRESS instead
